<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">

        <com.esketit.myapp.view.edit_image_view.EditImageView
                android:id="@+id/eiv_profile_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="false"/>

        <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/eiv_profile_avatar"
                android:layout_alignTop="@+id/eiv_profile_avatar"
                android:layout_toStartOf="@+id/iv_profile_arrow"/>

        <TextView
                android:id="@+id/tv_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/eiv_profile_avatar"
                android:layout_below="@+id/tv_profile_name"
                android:layout_toStartOf="@+id/iv_profile_arrow"/>

        <ImageView
                android:id="@+id/iv_profile_arrow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"/>
        
    </RelativeLayout>


</android.support.v7.widget.CardView>