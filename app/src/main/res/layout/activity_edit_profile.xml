<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.edit_profile.EditProfileActivity"
        android:background="@color/dark">

    <include
            android:id="@+id/toolbar_view_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:id="@+id/rv_edit_profile_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <com.esketit.myapp.view.edit_image_view.EditImageView
                        android:id="@+id/eiv_edit_profile_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="8dp"
                        android:clickable="true"/>

            </RelativeLayout>


            <TextView
                    android:id="@+id/tv_avatar_tooltip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:padding="16dp"
                    android:text="@string/edit_profile_tooltip_1"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/rv_edit_profile_avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <com.esketit.myapp.view.edit_text_view.EditTextView
                    android:id="@+id/etv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_avatar_tooltip"/>

            <TextView
                    android:id="@+id/tv_username_tooltip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:padding="16dp"
                    android:text="@string/edit_profile_tooltip_2"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/etv_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <RelativeLayout
                    android:id="@+id/rl_location_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_username_tooltip">

                <com.esketit.myapp.view.edit_text_view.EditTextView
                        android:id="@+id/etv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"/>

                <Switch
                        android:id="@+id/switch_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:padding="8dp"/>

            </RelativeLayout>

            <TextView
                    android:id="@+id/tv_location_tooltip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:padding="16dp"
                    android:text="@string/edit_profile_tooltip_3"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/rl_location_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <com.esketit.myapp.view.edit_text_view.EditTextView
                    android:id="@+id/etv_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_location_tooltip"/>

            <TextView
                    android:id="@+id/tv_bio_tooltip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:padding="16dp"
                    android:text="@string/edit_profile_tooltip_4"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/etv_bio"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                    android:id="@+id/btn_edit_profile_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/logout"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:background="@color/gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bio_tooltip"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>