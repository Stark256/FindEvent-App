<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_edit_image_root"
        android:layout_width="96dp"
        android:layout_height="wrap_content" >

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/gray"
            android:src="@color/blue"
            android:layout_alignParentTop="true"/>



    <RelativeLayout
            android:id="@+id/rl_base_container"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignTop="@+id/civ_avatar"
            android:layout_alignBottom="@+id/civ_avatar"
            android:layout_alignStart="@+id/civ_avatar"
            android:layout_alignEnd="@+id/civ_avatar">

        <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_camera"

                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
        />

        <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_avatar"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"/>

    </RelativeLayout>

</RelativeLayout>